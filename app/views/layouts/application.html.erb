<!DOCTYPE html>
<html>
  <head>
    <title>Apartments</title>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'jquery','application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <p>
      <%= if !current_user.nil?
            "Signed in as #{current_user.email} || Role: #{current_user.roles.pluck(:name).join(",")} "
          end
      %>
    </p>
    <%= yield %>
  </body>
</html>
